<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="152.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ats.algo.matchrunner.view.TimerControlsPaneController">
   <children>
      <Button fx:id="periodChange" layoutX="4.0" layoutY="28.0" mnemonicParsing="false"  onAction="#onPeriodChangeButtonPressed" prefHeight="31.0" prefWidth="97.0" text="Start match" />
  	  <Button fx:id="clockChange" layoutX="4.0" layoutY="105.0" mnemonicParsing="false"  mouseTransparent="true"  onAction="#onClockChangeButtonPressed" prefHeight="31.0" prefWidth="97.0" text="Clock start" />
      <Button fx:id="button10Sec" layoutX="111.0" layoutY="28.0" mnemonicParsing="false" mouseTransparent="true"  onAction="#on10SecsButtonPressed" prefHeight="31.0" prefWidth="82.0" text="+10 secs" />
      <Button fx:id="button1Min" layoutX="4.0" layoutY="64.0" mnemonicParsing="false" mouseTransparent="true"  onAction="#on1minButtonPressed" prefHeight="31.0" prefWidth="97.0" text="+1 min" />
      <Button fx:id="button10Min" layoutX="111.0" layoutY="64.0" mnemonicParsing="false" mouseTransparent="true" onAction="#on10minButtonPressed" prefHeight="31.0" prefWidth="82.0" text="+10 mins" />
      <TextField fx:id="elapsedTimeTextBox" alignment="CENTER" layoutX="122.0" layoutY="105.0" onAction="#onElapsedTimeEntered" prefHeight="31.0" prefWidth="60.0" />
      <Label alignment="CENTER" prefHeight="28.0" prefWidth="200.0" text="Elapsed Time Control" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Label>
      <Label fx:id="errMsg" layoutY="130.0" prefHeight="21.0" prefWidth="200.0" text="">
         <font>
            <Font name="System Italic" size="14.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
